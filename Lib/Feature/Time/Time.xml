<GuiXml>
    <Controls>
        <TopLevelControl name="Clock_TST_Time" movable="false" mouseEnabled="false" clampedToScreen="true">
            <ClampedToScreenInsets top="20" bottom="-20" left="20" right="-20"/>
            <Dimensions x="300" y="50"/>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" offsetX="75" offsetY="30"/>
            <Controls>
                <Texture name="$(parent)Background" textureFile="EsoUI/Art/Performance/StatusMeterMunge.dds">
                    <Dimensions x="500" y="200"/>
                    <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
                </Texture>
                <Label name="$(parent)Label" font="ZoFontWinT2"
                       color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL"
                       horizontalAlignment="CENTER" verticalAlignment="CENTER"
                       text="Fredas, 4th. Rain's Hand 2E 582 12:34:56 am">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT"/>
                </Label>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>